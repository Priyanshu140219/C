/*
    PRN : 22070123087
    Exp 2 : To compare 2 Numbers using boolean variables
*/
#include<iostream>
using namespace std;
int main
{
    int num1 , num2;
    bool com;
    cout<<"ENTER THE FIRST NUMBER : ";
    cin>>num1;
    cout<<"ENTER THE SECOND NUMBER : ";
    cin>>num2;
    com = num1>num2;
    if(com == 1)
    {
        cout<<"NUMBER 1 IS GREATER";
    }
    else
    {
        cout<<"NUMBER 2 IS GREATER";
    }
    return 0;
}
/*
OUTPUT
PS D:\C++> ./comparision
ENTER THE FIRST NUMBER : 12
ENTER THE SECOND NUMBER : 100
NUMBER 2 IS GREATER
PS D:\C++>
*/
